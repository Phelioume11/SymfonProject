{% extends 'base.html.twig' %}
{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Tous les livres</h1>
        <form class="d-flex" method="get" action="{{ path('book_index') }}">
            <input class="form-control me-2" type="search" name="q" placeholder="Recherche titre" value="{{ q }}">
            <select class="form-select me-2" name="genre">
                <option value="">Tous genres</option>
                {% for label, value in genres %}
                    <option value="{{ value }}" {% if genre == value %}selected{% endif %}>{{ label }}</option>
                {% endfor %}
            </select>
            <button class="btn btn-outline-primary">Filtrer</button>
        </form>
    </div>

    <div class="row">
        {% for book in books %}
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    {% if book.coverImage %}
                        <img src="/uploads/covers/{{ book.coverImage }}" class="card-img-top" alt="cover">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ book.title }}</h5>
                        <p class="card-text">{{ book.author }}</p>
                        <p class="card-text"><small class="text-muted">{{ book.getGenre() }}</small></p>
                        <a href="{{ path('book_show', {'slug': book.slug}) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun livre trouv√©.</p>
        {% endfor %}
    </div>
{% endblock %}
