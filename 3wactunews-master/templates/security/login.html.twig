{% extends 'base.html.twig' %}
{% block body %}
    <h1>Connexion</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form method="post">
        <div class="mb-3">
            <label for="inputEmail">Email</label>
            <input class="form-control" name="_username" id="inputEmail" value="{{ last_username }}" required autofocus>
        </div>
        <div class="mb-3">
            <label for="inputPassword">Mot de passe</label>
            <input class="form-control" name="_password" id="inputPassword" required>
        </div>
        <button class="btn btn-primary">Se connecter</button>
    </form>
{% endblock %}
