{% extends 'base.html.twig' %}
{% block body %}
    <h1>Mes livres</h1>
    <div class="row">
        {% for book in books %}
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    {% if book.coverImage %}
                        <img src="/uploads/covers/{{ book.coverImage }}" class="card-img-top" alt="cover">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ book.title }}</h5>
                        <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                        <form method="post" action="{{ path('book_delete', {'id': book.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete-book-' ~ book.id) }}">
                            <button class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Vous n'avez pas encore de livres.</p>
        {% endfor %}
    </div>
{% endblock %}
