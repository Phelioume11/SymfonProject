{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Livres disponibles</h1>
        {% if app.user %}
            <a href="{{ path('book_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Ajouter un livre
            </a>
        {% endif %}
    </div>

    <!-- Filtres -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Rechercher</label>
                    <input type="text" name="search" class="form-control"
                           placeholder="Titre ou auteur..." value="{{ search }}">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Genre</label>
                    <select name="genre" class="form-select">
                        <option value="">Tous les genres</option>
                        {% for key, label in genres %}
                            <option value="{{ key }}" {% if current_genre == key %}selected{% endif %}>
                                {{ label }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Filtrer
                    </button>
                    <a href="{{ path('book_index') }}" class="btn btn-secondary">Réinitialiser</a>
                </div>
            </form>
        </div>
    </div>

    {% if books is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun livre trouvé.
        </div>
    {% else %}
        <div class="row">
            {% for book in books %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        {% if book.coverImage %}
                            <img src="{{ asset('uploads/covers/' ~ book.coverImage) }}"
                                 class="card-img-top" alt="{{ book.title }}"
                                 style="height: 300px; object-fit: cover;">
                        {% else %}
                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                                 style="height: 300px;">
                                <i class="bi bi-book" style="font-size: 5rem;"></i>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ book.title }}</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-person"></i> {{ book.author }}<br>
                                    <i class="bi bi-tag"></i> {{ book.genre }}
                                </small>
                            </p>
                            <p class="card-text">{{ book.description|slice(0, 100) }}...</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="{{ path('book_show', {slug: book.slug}) }}"
                               class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> Voir détails
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}