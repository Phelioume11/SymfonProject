{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            {% if book.coverImage %}
                <img src="{{ asset('uploads/covers/' ~ book.coverImage) }}"
                     class="img-fluid rounded shadow" alt="{{ book.title }}">
            {% else %}
                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded"
                     style="height: 500px;">
                    <i class="bi bi-book" style="font-size: 8rem;"></i>
                </div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <h1>{{ book.title }}</h1>
            <p class="lead">
                <i class="bi bi-person-fill"></i> <strong>Auteur :</strong> {{ book.author }}
            </p>
            <p>
                <span class="badge bg-primary">{{ book.genre }}</span>
            </p>

            <hr>

            <h4>Description</h4>
            <p>{{ book.description ?? 'Aucune description disponible.' }}</p>

            <hr>

            <p class="text-muted">
                <small>
                    <i class="bi bi-calendar"></i> Créé le {{ book.createdAt|date('d/m/Y à H:i') }}<br>
                    <i class="bi bi-clock-history"></i> Modifié le {{ book.updatedAt|date('d/m/Y à H:i') }}<br>
                    {% if app.user %}
                        <i class="bi bi-person-badge"></i> Propriétaire : {{ book.user.email }}
                    {% endif %}
                </small>
            </p>

            <div class="mt-4">
                <a href="{{ path('book_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>

                {% if can_edit %}
                    <a href="{{ path('book_edit', {slug: book.slug}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>

                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Modal de confirmation de suppression -->
    {% if can_edit %}
        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmer la suppression</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        Êtes-vous sûr de vouloir supprimer le livre "{{ book.title }}" ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <form method="post" action="{{ path('book_delete', {slug: book.slug}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}